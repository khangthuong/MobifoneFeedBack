<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="98dp"
    android:elevation="0dp"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:padding="10dp">

        <TextView
            android:id="@+id/txt_subject_fb"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Mobifone"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textSize="17sp"
            android:fontFamily="sans-serif-condensed"
            android:layout_gravity="center|start"
            android:gravity="center|start"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="26-08-1990"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textSize="17sp"
            android:fontFamily="sans-serif-condensed"
            android:layout_gravity="center|end"
            android:gravity="center"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/txt_content_fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_below="@+id/txt_subject_fb"
            android:text="Almost all android application will have login or registration process in order to authenticate a user. In this article i will be demonstrating how to design android login and registration screen design (note that it just designing the screens â€“ no database connection or user validation)."
            android:ellipsize="end"
            android:maxLines="3"
            android:textStyle="normal"
            android:fontFamily="sans-serif-condensed"
            android:textSize="13sp"
            android:textColor="@color/colorBlack"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>